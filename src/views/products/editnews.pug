extends ../layout/layout.pug

block content
    h2(style ="margin-left : 100px") Tin tuc

    div(style="margin-left: 100px")
        form(action="/catenews/view/"+result.idnews, method="post")
                label idnews
                br
                input(name= "idcategory",type="text",value = result.idnews readonly )
                br
                label Title
                br
                input(name="title",type="text",value= result.title)
                br
                label Img
                br
                input(name="img",type="text", value = result.img )
                br
                lable Description
                br
                input(name="description",type="text",value= result.description)
                br
                label Status
                br
                input(name="status",type="text",value = result.status)
                br
                br
                select(name="idauthor")
                    each au in author
                        if(result.idauthor == au.idauthor)
                            option(value=au.idauthor selected)
                                span #{au.name}
                br
                label Createat
                br
                input(name="createat",type="text", value= result.createat)
                br
                lable Updateat
                br
                input(name="updateat",type="text",value=result.updateat)
                br
                label Chọn tin tức 
                br
                each ct in category
                    input(type="checkbox", name="idtheloai", value= ct.idcategory)
                    label #{ct.name}
                    each ctn in categorynews
                        if(result.idnews == ctn.idnews && ct.idcategory == ctn.idcategory)
                            input(type="checkbox",name="idtheloai", value=ct.idcategory checked)
                            label #{ct.name}
                br
                br
                button Save
                br
                a(href="/catenews/view") Back
