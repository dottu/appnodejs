extends ../layout/layout.pug

block content

    .container-fluid.my-5
      .row
        .col-8.offset-2
          .card
            .card-header.bg-primary.text-white.text-uppercase User
            .card-body
              .user.my-3 
                if (user && user.length > 0)
                  table.table.table-bordered
                    thead
                      tr.bg-info.text-white
                        th  id
                        th  Username
                        th  Password
                        th
                    tbody
                      each at in user
                        tr
                          td=  at.id
                          td=  at.username
                          td=  at.pass
                          td 
                            a.btn.btn-primary(href="/user/delete/"+at.id) DELETE
                            a.btn.btn-primary(href="/user/edit/"+at.id) Edit

              a.btn.btn-primary(href="/createaccount") CreateAccount
              a.btn.btn-primary(href="/") Back



