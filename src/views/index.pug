.container
  div(style= " padding-top: 100px")
   .row 
    each anh in news
      .col(style = "padding: 10px")
        .card(style='width: 18rem; margin-left: 100px')
            img.card-img-top(src='/uploads/'+anh.img, alt='zz')
            .card-body
                h5.card-title #{anh.title}
                a(href='/view/'+anh.idnews)  
                  | #{anh.status}
          

